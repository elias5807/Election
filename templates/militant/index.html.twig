<script>
    function toggleRepas(btn, id) {
        fetch('/militant/toggle-repas/' + id, {
            method: 'POST',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(res => res.json())
        .then(data => {
            if(data.status === 'success') {
                if(data.nouvelEtat) btn.classList.add('a-mange');
                else btn.classList.remove('a-mange');
            } else {
                alert('Erreur: ' + data.message);
            }
        })
        .catch(err => console.error(err));
    }
</script>
